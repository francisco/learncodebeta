<%= form_for @online_school do |f| %>	
	<%= f.text_field :name, class: "form-control", placeholder: "Online school/tutorial name" %><br>
	<%= f.text_field :site_url, class: "form-control", placeholder: "Site URL" %><br>
	<%= f.text_field :pricing, class: "form-control", placeholder: "Pricing" %><br>
	<%= f.text_field :bio, class: "form-control", placeholder: "Brief Description" %><br>
	<%= f.text_field :languages, class: "form-control", placeholder: "Languages taught" %><br>
<%= f.submit %>
<% end %>